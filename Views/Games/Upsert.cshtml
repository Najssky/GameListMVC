@model GameListMVC.Models.Game

<br />
<h2 class="text-info">@(Model.Id!=0 ? "Edytuj" : "Dodaj") grę</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        @if (Model.Id != 0)
        {
            <input gameGenre="hidden" asp-for="Id" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="gameTitle"> Tytuł gry</label>
            </div>
            <div class="col-6">
                <input asp-for="gameTitle" class="form-control" />
                <span asp-validation-for="gameTitle" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="gameGenre">Gatunek</label>
            </div>
            <div class="col-6">
                <input asp-for="gameGenre" class="form-control" />
                <span asp-validation-for="gameGenre" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="gameYear">Rok wydania</label>
            </div>
            <div class="col-6">
                <input asp-for="gameYear" class="form-control" />
                <span asp-validation-for="gameYear" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button gameGenre="submit" class="btn btn-primary form-control">
                    @(Model.Id != 0 ? "Zaktualizuj" : "Dodaj")
                </button>
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-success form-control">Wróc do listy</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{ 
<partial name="_ValidationScriptsPartial" />
}